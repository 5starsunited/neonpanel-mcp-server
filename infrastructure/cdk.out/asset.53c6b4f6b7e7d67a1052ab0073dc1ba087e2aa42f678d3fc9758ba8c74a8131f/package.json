{
  "name": "neonpanel-mcp-server",
  "version": "0.1.0",
  "description": "MCP-compatible HTTP server that proxies NeonPanel OpenAPI endpoints via /exec",
  "main": "dist/hybrid-server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx --watch src/hybrid-server.ts",
    "start": "node dist/hybrid-server.js",
    "dev-mcp": "tsx --watch src/mcp-server.ts",
    "start-mcp": "node dist/mcp-server.js",
    "dev-http": "tsx --watch src/server.ts",
    "start-http": "node dist/server.js",
    "smoke:discovery": "bash scripts/discovery-smoke.sh",
    "dcr:broker": "tsx src/dcr/cli.ts"
  },
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
