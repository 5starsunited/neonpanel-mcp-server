{
  "name": "amazon_supply_chain.inventory_sku_deep_dive",
  "description": "Deep dive for a specific item: coverage drivers, inbound, constraints, and key metrics for decisioning.",
  "isConsequential": false,
  "inputSchema": {
    "type": "object",
    "properties": {
      "inventory_id": {
        "type": "integer"
      },
      "sku": {
        "type": "string"
      },
      "asin": {
        "type": "string"
      },
      "include_inbound": {
        "type": "boolean",
        "default": true
      },
      "include_costs": {
        "type": "boolean",
        "default": false
      },
      "company_id": {
        "type": "integer",
        "minimum": 1,
        "description": "Optional: restrict to a specific company_id (must be permitted)."
      }
    },
    "required": [],
    "description": "Provide at least one identifier: inventory_id OR sku OR asin."
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "item_ref": {
        "type": "object",
        "description": "Canonical item reference. Include at least one identifier. Prefer to include item_icon_url in tool outputs to avoid extra requests.",
        "properties": {
          "inventory_id": {
            "type": "integer"
          },
          "sku": {
            "type": "string"
          },
          "asin": {
            "type": "string"
          },
          "marketplace": {
            "type": "string",
            "enum": [
              "US",
              "UK"
            ]
          },
          "item_name": {
            "type": "string"
          },
          "item_icon_url": {
            "type": "string",
            "description": "Small icon/image URL for item; include in datasets when possible."
          }
        }
      },
      "metrics": {
        "type": "object",
        "properties": {
          "days_to_oos": {
            "type": "number"
          },
          "days_of_supply": {
            "type": "number"
          },
          "fba_on_hand": {
            "type": "integer"
          },
          "fba_inbound": {
            "type": "integer"
          },
          "network_on_hand": {
            "type": "integer"
          },
          "supplier_lead_time_days": {
            "type": "integer"
          },
          "safety_stock_days": {
            "type": "integer"
          },
          "current_units_per_day": {
            "type": "number"
          },
          "planned_units_per_day": {
            "type": "number"
          }
        }
      },
      "drivers": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "notes": {
        "type": "string"
      }
    },
    "required": [
      "item_ref",
      "metrics"
    ]
  },
  "examples": []
}
