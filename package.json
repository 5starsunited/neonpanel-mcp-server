{
  "name": "neonpanel-mcp-server",
  "version": "0.1.0",
  "description": "NeonPanel MCP server with OAuth bearer validation, JSON-RPC tools, and SSE transport.",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && node scripts/copy-athena-tool-assets.js",
    "dev": "tsx --watch src/main.ts",
    "start": "node dist/main.js",
    "test": "tsx --test tests/**/*.test.ts",
    "openapi:refresh": "tsx src/scripts/refresh-openapi.ts",
    "smoke:discovery": "bash scripts/discovery-smoke.sh",
    "athena:explain:forecasting_list_latest_sales_forecast": "tsx src/scripts/athena-explain-forecasting-list-latest.ts"
  },
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "@aws-sdk/client-athena": "^3.879.0",
    "@aws-sdk/client-sts": "^3.879.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "pino": "^8.18.0",
    "pino-http": "^9.0.0",
    "undici": "^6.15.0",
    "zod": "^3.22.0",
    "zod-to-json-schema": "^3.23.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.0.0",
    "pino-pretty": "^11.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
